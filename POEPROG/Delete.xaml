<Window x:Class="POEPROG.Delete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POEPROG"
        mc:Ignorable="d"
        Title="Delete" Height="450" Width="800">
    <Grid>
        <Label x:Name="label" Content="DELETE RECIPE DETAILS" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="390" Height="34" FontSize="18" FontFamily="Javanese Text" Background="#FFEF8A8A" HorizontalContentAlignment="Center"/>
        <Label x:Name="label1" Content="Choose Recipe To Delete : " HorizontalAlignment="Left" Margin="10,84,0,0" VerticalAlignment="Top" Width="158"/>
        <ComboBox x:Name="RecipescomboBox" HorizontalAlignment="Left" Margin="191,86,0,0" VerticalAlignment="Top" Width="278"/>
        <ListBox x:Name="RecipelistBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,115,107,26" Background="#FFC5AAAA"/>
        <Button x:Name="Deletebutton" Content="Delete" HorizontalAlignment="Left" Margin="551,86,0,0" VerticalAlignment="Top" Width="74" Click="Deletebutton_Click"/>
        <Button x:Name="Menubutton" Content="Menu" HorizontalAlignment="Left" Margin="728,302,0,0" VerticalAlignment="Top" Height="25" Width="47" Click="Menubutton_Click"/>

    </Grid>
</Window>
